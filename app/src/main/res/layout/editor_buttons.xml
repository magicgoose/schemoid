<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="@dimen/editor_button_border_size"
              android:background="@drawable/editor_buttons_background"
              android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/eb_left_paren"
        style="@style/EditorButton"
        android:text="("
        tools:ignore="HardcodedText"/>

    <include layout="@layout/button_separator"/>

    <TextView
        android:id="@+id/eb_right_paren"
        style="@style/EditorButton"
        android:text=")"
        tools:ignore="HardcodedText"/>

    <include layout="@layout/button_separator"/>

    <TextView
        android:id="@+id/eb_eval"
        style="@style/EditorButton"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="Eval"
        tools:ignore="HardcodedText"/>

    <include layout="@layout/button_separator"/>

    <TextView
        android:id="@+id/eb_left_arrow"
        style="@style/EditorButton"
        android:text="←"
        tools:ignore="HardcodedText"/>

    <include layout="@layout/button_separator"/>

    <TextView
        android:id="@+id/eb_right_arrow"
        style="@style/EditorButton"
        android:text="→"
        tools:ignore="HardcodedText"/>

</LinearLayout>
