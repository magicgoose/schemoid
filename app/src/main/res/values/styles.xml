<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="CodeInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">10</item>
        <item name="android:minLines">2</item>
        <item name="android:gravity">bottom</item>
        <item name="android:typeface">monospace</item>
        <item name="android:inputType">textMultiLine|textNoSuggestions</item>
        <item name="android:hint">@string/code_input_hint</item>
    </style>

    <style name="ExecutionLog">
    </style>

    <style name="EditorButton">
        <item name="android:layout_width">@dimen/editor_button_size</item>
        <item name="android:layout_height">@dimen/editor_button_size</item>
        <item name="android:background">@drawable/editor_button_background</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#535353</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize" tools:ignore="SpUsage">22dp</item>
        <item name="android:clickable">true</item>
    </style>

    <string name="code_input_hint">type Scheme code here</string>
</resources>
